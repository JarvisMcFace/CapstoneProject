<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="140dp"
    android:layout_gravity="center"
    android:background="@color/translucent_black"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:id="@+id/widget_stack_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_margin_half"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_customer_type"
                android:layout_gravity="right"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/material_4"
                android:textSize="@dimen/widget_font_size"
                android:textStyle="bold"
                tools:text="Residential"/>

            <TextView
                android:id="@+id/widget_date"
                android:paddingStart="@dimen/material_margin_half"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/widget_font_size"
                tools:text="Jul 17, 2017"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/review_price_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_4"
            android:layout_marginTop="@dimen/material_margin_half"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/price_range"
                android:textSize="@dimen/widget_font_size"/>

            <TextView
                android:id="@+id/widget_price_estimate_range"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/material_margin"
                android:layout_weight="1"
                android:textSize="@dimen/widget_font_size"
                tools:text="$120 - $120"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/review_room_container"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_4"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nbr_rooms"
                android:textSize="@dimen/widget_font_size"/>

            <TextView
                android:id="@+id/widget_number_rooms"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/material_margin"
                android:layout_weight="1"
                android:textSize="@dimen/widget_font_size"
                tools:text="3"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/review_square_feet_container"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_4"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/estimate_square_feet"
                android:textSize="@dimen/widget_font_size"/>

            <TextView
                android:id="@+id/widget_square_feet"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/material_margin"
                android:layout_weight="1"
                android:textSize="@dimen/widget_font_size"
                tools:text="393"/>
        </LinearLayout>

        <TextView
            android:id="@+id/widget_message"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/material_4"
            android:layout_marginEnd="@dimen/material_margin_half"
            android:layout_marginStart="@dimen/material_margin_half"
            android:layout_marginTop="@dimen/material_4"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/we_will_contact_you_soon"
            android:textSize="@dimen/widget_font_size"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".17"
        android:background="@drawable/bluegreenglobe"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>