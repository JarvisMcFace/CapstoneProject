<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/layout_services_selection"
                layout="@layout/layout_cardview_services"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/layout_carpet_cleaning_services"
                    layout="@layout/layout_cardview_clean_rooms"/>

                <include
                    android:id="@+id/layout_upholstery_services"
                    layout="@layout/layout_cardview_clean_upholstery"/>





                <android.support.v7.widget.CardView
                    android:id="@+id/customer_contact_cardview"
                    style="@style/CardView_Common_Elements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/material_margin"
                            android:layout_marginEnd="@dimen/material_margin"
                            android:layout_marginStart="@dimen/material_margin"
                            android:layout_marginTop="@dimen/cardview_title_margin"
                            android:text="Modify CONTACT INFO"/>

                        <Button
                            android:id="@+id/modify_contact_information"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/modify"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>