<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/services_selection_cardview"
                style="@style/CardView_Common_Elements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/material_margin_half"
                        android:layout_marginEnd="@dimen/material_margin"
                        android:layout_marginStart="@dimen/material_margin"
                        android:layout_marginTop="@dimen/cardview_title_margin"
                        android:text="@string/service_selectoin"/>

                    <TextView
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/material_margin"
                        android:layout_marginStart="@dimen/material_margin"
                        android:text="@string/cleaning_services"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        d<android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/services_selection_carpet_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginEnd="@dimen/material_margin"
                            android:layout_marginStart="@dimen/material_margin"
                            android:text="@string/services_selection_carpet"/>

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/services_selection_upholstery_checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginEnd="@dimen/material_margin"
                            android:layout_marginStart="@dimen/material_margin"
                            android:text="@string/services_selection_upholstery"/>
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/carpet_cleaning_services_cardview"
                    style="@style/CardView_Common_Elements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/material_margin"
                            android:layout_marginEnd="@dimen/material_margin"
                            android:layout_marginStart="@dimen/material_margin"
                            android:layout_marginTop="@dimen/cardview_title_margin"
                            android:text="@string/rooms_to_clean"/>

                        <LinearLayout
                            android:id="@+id/container_carpet_rooms_to_clean"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"/>

                        <Button
                            android:id="@+id/modify_carpeting_cleaning_rooms"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/modify"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/customer_contact_cardview"
                    style="@style/CardView_Common_Elements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/material_margin"
                            android:layout_marginEnd="@dimen/material_margin"
                            android:layout_marginStart="@dimen/material_margin"
                            android:layout_marginTop="@dimen/cardview_title_margin"
                            android:text="Modify CONTACT INFO"/>

                        <Button
                            android:id="@+id/modify_contact_information"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/modify"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>